{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,      
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "node"] // Add jest here
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }
  